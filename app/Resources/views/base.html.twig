<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
         <title>{% block title %}Title{% endblock %}</title>
        <meta name="description" content="{% block description %}Description{% endblock %}">
        
        {% block stylesheets %}
            <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet" />
            <link href="{{ asset('css/offcanvas.css') }}" rel="stylesheet" />
        {% endblock %}
        
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
        <!--[if lt IE 9]><script src="{{ asset('js/ie8-responsive-file-warning.js') }}"></script><![endif]-->
        <script src="{{ asset('js/ie-emulation-modes-warning.js') }}"></script>
        <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
        <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
          <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
        
    </head>
    <body>
        <nav class="navbar navbar-fixed-top navbar-inverse">
            <div class="container">
              <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                  <span class="sr-only">Toggle navigation</span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ path('location_page_index') }}">{% trans %}site_name{% endtrans %}</a>
              </div>
              {{ render(controller('LocationPlaceBundle:Page:menutop')) }}
            </div><!-- /.container -->
          </nav><!-- /.navbar -->

          <div class="container">

            <div class="row row-offcanvas row-offcanvas-right">
              <div class="col-xs-12 col-sm-9">
                <p class="pull-right visible-xs">
                  <button type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas">{{ 'sidebur_title'|trans }}</button>
                </p> 
                {% block breadcrumbs %}{{ wo_render_breadcrumbs() }}{% endblock %}
                {% block body %}{% endblock %}
                <hr>
                <div class="row">
                  {% block bottom_content %}{% endblock %}  
                </div><!--/row-->
              </div><!--/.col-xs-12.col-sm-9-->

              <div class="col-xs-6 col-sm-3 sidebar-offcanvas" id="sidebar">
                {% block sidebar %}{% endblock %}  
              </div><!--/.sidebar-offcanvas-->
            </div><!--/row-->

            <hr>

            <footer>
              <p>&copy; {{'site_name'|trans}} 2015</p>
            </footer>

          </div><!--/.container-->
        {% block javascripts %}
            <script src="{{ asset('js/bootstrap.min.js') }}"></script>
            <script src="{{ asset('js/ie10-viewport-bug-workaround.js') }}"></script>
            <script src="{{ asset('js/offcanvas.js') }}"></script>
            <script src="{{ asset('js/active_link.js') }}"></script>
        {% endblock %}
    </body>
</html>
