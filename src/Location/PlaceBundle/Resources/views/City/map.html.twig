{% extends 'LocationPlaceBundle::layout.html.twig' %}

{% block title %}{{title}}{% endblock%}

{% block description %}{{description}}{% endblock %}

{% block body %}
    
    <h1>{{title}}</h1>
    
    <p><strong>{{city.name}} {{ 'coordinates_center'|trans|lower }}:</strong>  {{city.lat}} {{city.lng}}</p>
    
    {{ google_map(map) }}
    
    {{ include('LocationPlaceBundle::Social/bookmarks.html.twig') }}
    
    {% if places|length %}
    
        <h2>{% trans %}places{% endtrans %}</h2>

        <p>
            <ul>
            {% for place in places %}
                <li><a href="{{ path('location_place_map', { 'id': place.id }) }}">{{ place.name }}</a></li>
            {% endfor %}
            </ul>
        </p>
    
    {% endif %}
    
    {% if cities_nearest|length %}
    
        <h2>{% trans %}cities_nearest{% endtrans %}</h2>

        <p>
            <ul>
            {% for city_nearest in cities_nearest %}
                <li><a href="{{ path('location_city_map', { 'id': city_nearest.id }) }}">{{ city_nearest.name }}</a> ({{coordinate.getDistance({'lat': city.lat, 'lng': city.lng}, {'lat': city_nearest.lat, 'lng': city_nearest.lng}, 'km')}} {{ 'km'|trans }})</li>
            {% endfor %}
            </ul>
        </p>
    
    {% endif %}

{% endblock %}


